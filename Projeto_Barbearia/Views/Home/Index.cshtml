@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Pagina Inicial";
}

<div class="w3-container">
    <div class="w3-container" style="height:150px">
    </div>
    <div class="w3-content w3-card-4 w3-animate-zoom white-opacity w3-round-large" style="max-width:600px">
        <div class="w3-center">
            <br>
            <span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-xlarge w3-hover-red w3-display-topright" title="Close Modal">&times;</span>
            <img src="/assets/logo_barbearia.png" alt="Avatar" style="width:30%" class="w3-circle w3-margin-top">
        </div>

        <form class="w3-container" action="/action_page.php">
            <div class="w3-section">
                <label><b>Nome do Usuário</b></label>
                <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="Adicione seu Usuário" name="Nome" required>
                <label><b>Senha</b></label>
                <div class="w3-row js-block-view-password">
                    <span class="w3-col w3-hover-gray w3-xlarge w3-right w3-border js-btn-password" style="width: 50px; padding:1px 11px; border-radius: 0 6px 6px 0; cursor:pointer; background-color: #ccc; color:grey;" id="btnAddEmail"><i class="js-icon-password fa fa-eye-slash"></i></span>
                    <div class="w3-rest">
                        <input type="password" name="confirmarSenha" class="w3-input w3-border js-input-password" id="confirmarSenha" style="outline:0; border-radius: 6px 0 0 6px">
                    </div>
                </div>
                <button class="w3-button w3-block w3-green w3-section w3-padding" type="submit">Login</button>
                <input class="w3-check w3-margin-top" type="checkbox" checked="checked"> Salvar Login
            </div>
        </form>
        <div class="w3-container w3-border-top w3-padding-16 w3-light-grey w3-round-bottom-large">
            <button onclick="document.getElementById('id01').style.display='none'" type="button" class="w3-button w3-red">Cancelar</button>
            <span class="w3-right w3-padding w3-hide-small"><a href="cadastro.cshtml" target="_blank"><b>Esqueceu a senha?</b></a></span>
        </div>

    </div>
</div>